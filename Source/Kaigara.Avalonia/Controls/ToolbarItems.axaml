<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="https://github.com/dfkeenan/Kaigara">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
  <Style Selector="k|Toolbar Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>
  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeControlMidBrush}" />
  </Style>
  <Style Selector="k|Toolbar Separator">
    <!--Width="1" Background="{DynamicResource ThemeBorderMidBrush}"-->
    <Setter Property="Width" Value="1" />
    <Setter Property="Height" Value="NaN" />
    <Setter Property="Margin" Value="2" />
    <Setter Property="Background" Value="{DynamicResource ThemeBorderMidBrush}" />
  </Style>
</Styles>

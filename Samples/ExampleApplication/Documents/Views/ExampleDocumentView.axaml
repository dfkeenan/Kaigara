<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExampleApplication.Documents.Views.ExampleDocumentView">
  <Grid RowDefinitions="auto" ColumnDefinitions="auto, 1*" Margin="4" >
    <TextBlock Grid.Column="0" Text="Is Checked" />
    <CheckBox Grid.Column="1" Margin="4,0" IsChecked="{Binding IsChecked}"></CheckBox>
  </Grid>
</UserControl>

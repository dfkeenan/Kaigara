<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExampleApplication.Configuration.ExampleConfigPageView">
  <Grid RowDefinitions="auto, auto" ColumnDefinitions="auto, 1*" >
    <!--<Grid.Styles>
      <Style Selector="Label">
        <Setter Property="Margin" Value="0,0,8,0" />
      </Style>
    </Grid.Styles>-->
    
    <Label Grid.Row="1" Grid.Column="0" Content="Config Value" />
    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Value}" />

  </Grid>
</UserControl>
